<!-- Modal View -->
<div class="modal fade" id="addDishPictures" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Dish Pictures</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @chef do |f| %>
          <%= f.input :dish_photos, as: :file, input_html: {multiple: true}, label: false %>
      </div>
      <div class="modal-footer">
        <%= f.submit 'Upload', class: "btn btn-info mb-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
