<div class="chef-profile-page-container mb-5">
  <div class='chef-info ml-3'>
    <% if @chef.photo.attached? %>
    <%= cl_image_tag @chef.photo.key, width: 360, class: 'cloudinary-img' %>
    <% end %>

    <h2 id="chef-name"><%= @chef.name %></h2>
    <h3 id="experience"><%= @chef.years_experience %> Years Experience</h3>
    <div class='chef-deets'>
      <p><strong>Bio:</strong> <%= @chef.bio %></p>
      <p><strong>Hourly Rate:</strong> Â£<%= @chef.hourly_rate.to_i %></p>
      <p><strong>Location:</strong> <%= @chef.location %></p>
      <p><strong>Cuisine(s):</strong> <%= @chef.cuisines %></p>
    </div>

    <%= link_to "Update", edit_chef_path(@chef), class: 'btn btn-info mb-2' %>
    <%= link_to chef_path(@chef),
    method: :delete,
    data: { confirm: "Are you sure you want to delete?" }, class: 'btn btn-danger mb-2' do %>
    Delete <i class="far fa-trash-alt"></i>
    <% end %>
    <br>
    <%= link_to "Return to 'Browse Chefs'", chefs_path, class: 'btn btn-info mb-3'  %>
  </div>

  <div class="mt-3">
    <h2 class="book-chef">Dish Pictures:</h2>
    <div class="dishes">
      <% @chef.dish_photos.each do |photo| %>
        <%= cl_image_tag photo.key, class: 'cloudinary-img card-dish' %>
      <% end %>
    </div>
    <button type="button" class="btn btn-danger mt-3" data-toggle="modal" data-target="#addDishPictures">
    Add some pictures
    </button>
  </div>

  <div class="booking-form-container m-3">
    <h2 class="book-chef">Book this Chef:</h2>
    <div class='booking-form'>

      <%= simple_form_for [ @chef, @booking ] do |f| %>
      <%= f.input :date, label: 'Date:', as: :date, html5: true %>
      <div class="row">
        <div class="col">
          <%= f.input :guests, label: 'Number of Guests:', collection: 2..50 %>
        </div>
        <div class="col">
          <%= f.input :duration, label: 'Duration (Hours):', collection: 3..12 %>
        </div>
      </div>
      <%= f.input :location, input_html: { autocomplete: 'email' }, label: 'Location:' %>
      <%= f.input :cuisine, label: 'Preferred Cuisine:', :collection => ['Italian', 'French', 'German', 'Irish', 'British', 'Bulgarian', 'Greek', 'Spanish', 'American', 'Turkish', 'Japanese', 'Modern', 'Traditional', 'Chinese'] %>
      <%= f.submit 'Confirm Booking', class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>

</div>

<%= render 'modal_add_pictures' %>




