<div class='chef-info ml-3'>
  <% if @chef.photo.attached? %>
    <%= cl_image_tag @chef.photo.key, width: 360 %>
  <% end %>

  <h2 id="chef-name"><%= @chef.name %></h2>
  <h3 id="experience"><%= @chef.years_experience %> Years Experience</h3>
  <div class='chef-deets'>
    <p>Bio: <%= @chef.bio %></p>
    <p>Hourly Rate: Â£<%= @chef.hourly_rate.to_i %></p>
    <p>Location: <%= @chef.location %></p>
    <p>Cuisine(s): <%= @chef.cuisines %></p>
  </div>
</div>

<div class='buttons ml-3'>
  <%= link_to "Update", edit_chef_path(@chef), class: 'btn btn-info mb-2' %>
  <br>
  <%= link_to chef_path(@chef),
              method: :delete,
              data: { confirm: "Are you sure you want to delete?" }, class: 'btn btn-danger mb-2' do %>
              Delete <i class="far fa-trash-alt"></i>
              <% end %>
  <br>
  <%= link_to "Return to 'Browse Chefs'", chefs_path, class: 'btn btn-info'  %>
</div>
<div class="booking-form-container m-3">
  <h2>Book this Chef:</h2>
  <div class='booking-form'>
    <%= simple_form_for [ @chef, @booking ] do |f| %>
      <%= f.input :date, label: 'Date:' %>
      <%= f.input :guests, label: 'Number of Guests:', collection: 2..50 %>
      <%= f.input :location, label: 'Location:' %>
      <%= f.input :duration, label: 'Duration (Hours):', collection: 3..12 %>
      <%= f.input :cuisine, label: 'Preferred Cuisine:' %>
      <%= f.submit 'Confirm Booking' %>
    <% end %>
  </div>
</div>
