<div class="text-center">
  <h1 class="browse-chefs mt-3">Browse Chefs</h1>
    <div class="chef-container">
      <% @chefs.each do |chef| %>
      <div class="chef-profile">
        <% if chef.photo.attached? %>
          <%= cl_image_tag chef.photo.key, width: 250 %>
        <% end %>
          <%= link_to chef.name, chef_path(chef), class: 'd-block chef-name'%>
          <div class='chef-details'>
            <p>Location: <%= chef.location%></p>
            <p>Hourly Rate: Â£<%= chef.hourly_rate.to_i %></p>
          </div>
      </div>
    <% end %>
    </div>

    <div id="map"
         style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  <%= link_to 'Add Chef', new_chef_path, class: 'btn btn-info mb-4 private' %>
</div>
